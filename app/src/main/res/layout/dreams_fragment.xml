<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topbar"
        android:background="@color/mainPurple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_size">

        <TextView
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/white"
            android:text="Your Dreams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_marginRight="@dimen/dream_text_margin"
            android:layout_toLeftOf="@+id/settingsbutton"
            android:id="@+id/searchbutton"
            android:background="@color/mainPurple"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:src="@drawable/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_marginRight="@dimen/dream_text_margin"
            android:id="@+id/settingsbutton"
            android:background="@color/mainPurple"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="@dimen/list_padding"
        android:paddingBottom="@dimen/list_padding"
        android:paddingTop="@dimen/list_padding"
        android:paddingLeft="@dimen/list_padding"
        android:background="@color/background"
        android:layout_below="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:dividerHeight="@dimen/list_padding"
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

        <TextView
            android:visibility="visible"
            android:id="@+id/nodreamstext"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            android:text="No dreams yet :("
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>