<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_above="@+id/mainbuttons"
        android:id="@+id/framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:id="@+id/mainbuttons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/addButton"
            android:onClick="addDream"
            android:textAllCaps="false"
            android:background="@drawable/purple_button_pressed"
            android:src="@drawable/add_button"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:onClick="dreams"
            android:id="@+id/dreamsButton"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/purple_button_pressed"
            android:src="@drawable/dreams_button"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:onClick="statistics"
            android:id="@+id/statisticsButton"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/purple_button_pressed"
            android:src="@drawable/stat_button"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>